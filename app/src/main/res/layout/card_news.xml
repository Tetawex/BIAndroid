<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/double_margin"
    android:layout_marginRight="@dimen/splitter_thickness"
    android:layout_marginLeft="@dimen/splitter_thickness">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/double_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="@dimen/greater_image_size"
            android:layout_width="match_parent"
            android:gravity="left">

            <ImageView
                android:id="@+id/logo"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="@dimen/greater_image_size"
                android:layout_gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                android:src="@drawable/ic_bi_logo"
                android:background="@null"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/double_margin"
                android:gravity="center">
                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextPrimary"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="0"
                    android:text="Историческая справка"/>
                <TextView
                    android:id="@id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextSecondary"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="0"
                    android:text="32 минуты назад"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="match_parent"
                android:gravity="top">
                <ImageButton
                    android:id="@+id/moreInfoButton"
                    android:layout_height="@dimen/secondary_image_size"
                    android:layout_width="@dimen/secondary_image_size"
                    android:layout_gravity="right"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"

                    android:src="@drawable/ic_moreinfo"
                    android:background="@null"/>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTextNavBar"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:paddingTop="@dimen/double_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="@dimen/double_margin"
            android:text="Умирающий император Шуньчжи перед своей смертью в 1661 году создал регентство из четырёх человек во главе с князем Обоем. Они должны были править страной до совершеннолетия императора Канси, которому на тот момент было 6 лет."/>
        <FrameLayout
            android:id="@+id/frame"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                android:src="@drawable/ic_kangxi"
                android:background="@null"/>
            <FrameLayout
                android:id="@+id/imageCounter"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:padding="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:padding="0dp"
                    android:background="#AAFFFFFF">

                <TextView
                    android:id="@+id/imageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorTextNavBar"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="0"
                    android:textStyle="bold"
                    android:text="4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
                <ImageView
                    android:id="@+id/xwd"
                    android:layout_height="@dimen/tertiary_image_size"
                    android:layout_width="@dimen/tertiary_image_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"

                    android:src="@drawable/ic_image"
                    android:background="@null"/>
                </LinearLayout>

            </FrameLayout>
        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>