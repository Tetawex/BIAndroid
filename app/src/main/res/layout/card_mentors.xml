<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/double_margin"
    android:layout_marginRight="@dimen/splitter_thickness"
    android:layout_marginLeft="@dimen/splitter_thickness">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/double_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left">

            <ImageView
                android:id="@+id/logo"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="@dimen/greater_image_size"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                android:src="@drawable/ic_pahom"
                android:background="@null"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/double_margin"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextPrimary"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="0"
                    android:textStyle=""
                    android:text="Поехавший Пахом Братишкин"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextSecondary"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="0"
                    android:text="Зам. министра по гауптвахте им. Ленина"/>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTextNavBar"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:paddingTop="@dimen/double_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="0dp"
            android:textStyle="bold"
            android:text="Предметы:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTextNavBar"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:paddingTop="@dimen/default_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="0dp"
            android:text="Китайская гимнастика\nМатематический анализ\nЦаплестояние"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTextNavBar"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:paddingTop="@dimen/double_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="0dp"
            android:textStyle="bold"
            android:text="Контакты:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTabsScroll"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:paddingTop="@dimen/default_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="0dp"
            android:text="blazer@jmail.ua"/>


    </LinearLayout>

</android.support.v7.widget.CardView>