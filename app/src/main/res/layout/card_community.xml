<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/double_margin"
    android:layout_marginRight="@dimen/splitter_thickness"
    android:layout_marginLeft="@dimen/splitter_thickness">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/double_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="@dimen/greater_image_size"
            android:layout_width="match_parent"
            android:gravity="left">

            <ImageView
                android:id="@+id/logo"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="@dimen/greater_image_size"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_scbi_logo"
                android:background="@null"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/greater_image_size"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/double_margin"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextPrimary"
                    android:scaleType="fitCenter"
                    android:paddingRight="16dp"
                    android:id="@+id/title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="СКБИ"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorTextSecondary"
                    android:scaleType="fitCenter"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/dateTime"
                    android:text="Студенческие курсы"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="@dimen/greater_image_size"
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/moreInfoButton"
                    android:layout_height="@dimen/secondary_image_size"
                    android:layout_width="@dimen/secondary_image_size"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/primary_image_offset"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_moreinfo"
                    android:background="@null"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorTextNavBar"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:id="@+id/description"
            android:paddingTop="@dimen/double_margin"
            android:paddingLeft="0dp"
            android:paddingRight="32dp"
            android:paddingBottom="0dp"
            android:text="Проводим бесплатные дополнительные занятия по основным предметам первого курса и отвечаем на ваши вопросы 24/7 вот уже 10 лет."/>

    </LinearLayout>

</android.support.v7.widget.CardView>